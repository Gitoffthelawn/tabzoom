{
  "manifest_version": 2,
  "name": "TabZoom",
  "version": "1.2",

  "description": "Reduce the tab footprint of non-current containers",

  "icons": {
    "48": "icons/zoom-48.png",
    "96": "icons/zoom-96.png"
  },

  "permissions": ["tabs", "tabHide", "contextualIdentities"],

  "browser_action": {
    "default_icon": "icons/zoom-48.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["tabzoom.js"]
    }
  ]
}
